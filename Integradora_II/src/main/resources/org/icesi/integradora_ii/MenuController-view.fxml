<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>

<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.icesi.integradora_ii.MenuController">
    <center>
        <StackPane>
            <children>
                <VBox alignment="CENTER" spacing="20" translateY="100.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#EnterGame" prefHeight="67.0" prefWidth="115.0" text="PLAY" textAlignment="CENTER">
                            <font>
                                <Font name="Impact" size="31.0" />
                            </font>
                        </Button>
                        <Button fx:id="manualButton" mnemonicParsing="false" onAction="#showManual" prefHeight="67.0" prefWidth="150.0" text="How to Play" textAlignment="CENTER">
                            <font>
                                <Font name="Impact" size="24.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#exitApplication" prefHeight="67.0" prefWidth="115.0" text="EXIT" textAlignment="CENTER">
                            <font>
                                <Font name="Impact" size="31.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

    <top>
        <StackPane alignment="TOP_RIGHT">
            <children>
                <HBox alignment="TOP_RIGHT" spacing="10">
                    <children>
                        <Button fx:id="muteButton" onAction="#toggleMute" prefHeight="50" prefWidth="100" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fx:id="muteIcon" fitHeight="26.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true" />
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </top>
</BorderPane>